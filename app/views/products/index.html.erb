<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.code') %></th>
      <th><%= t('.status') %></th>
      <th><%= t('.weight') %></th>
      <th><%= t('.description') %></th>
      <th><%= t('.multiple') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.code %></td>
        <td><%= product.status %></td>
        <td><%= product.weight %></td>
        <td><%= product.description %></td>
        <td><%= product.multiple %></td>
        <td><%= link_to t('.show'), product %></td>
        <td><%= link_to t('.edit'), edit_product_path(product) %></td>
        <td><%= link_to t('.destroy'), product, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_product_path %>
